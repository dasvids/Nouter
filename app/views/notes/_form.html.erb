<%= render 'shared/errors', object: @note %>
<%= form_with model: @note,  remote:true do |f| %>
  <div  class="mb-3 row">
    <%= f.label :title, class: 'col_form-label' %>

    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= f.label :text, class: 'col_form-label' %>

    <div class="col-sm-10">
      <%= f.rich_text_area :text, class: 'form-control' %>
    </div>
  </div>
  <%= link_to 'Back', root_url, class: 'btn btn-secondary' %>
  <%= f.submit "Submit", class: 'btn btn-primary' %>
<%end %>